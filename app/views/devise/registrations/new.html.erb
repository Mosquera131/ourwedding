<h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white p-6 rounded-lg shadow-md max-w-md mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :name, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.text_field :name, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.email_field :email, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :rol, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.select :rol, User.rols.keys.map { |rol| [rol.titleize, rol] }, prompt: "Select role", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="text-center">
    <%= f.submit "Sign up", class: "w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-300" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
