<h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white p-6 rounded-lg shadow-md max-w-md mx-auto" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :remember_me, class: "ml-2 text-gray-700" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit "Log in", class: "w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-300" %>
  </div>
<% end %>

<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
