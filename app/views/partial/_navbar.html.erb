<nav class="bg-pink-200 text-white p-4 shadow-lg">
  <ul class="flex justify-end space-x-4">
    <% if user_signed_in? %>
      <li>
        <%= form_for(:user, url: destroy_user_session_path, method: :delete, html: { class: "inline" }) do |f| %>
          <%= f.submit 'Logout', class: "rounded-lg py-2 px-4 bg-red-600 text-white font-medium hover:bg-red-700 transition-colors duration-300 shadow-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50" %>
        <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to 'Login', new_user_session_path, class: "rounded-lg py-2 px-4 bg-blue-600 hover:bg-blue-700 transition-colors duration-300 font-medium shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
      </li>
      <li>
        <%= link_to 'Register', new_user_registration_path, class: "rounded-lg py-2 px-4 bg-green-600 hover:bg-green-700 transition-colors duration-300 font-medium shadow-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
      </li>
    <% end %>
  </ul>
</nav>
